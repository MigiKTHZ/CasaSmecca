generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CustomerOrder {
  orderID        Int          @id @default(autoincrement())
  status         String       @db.VarChar(50)
  shippingAdress String       @db.VarChar(200)
  user           User         @relation(fields: [userID], references: [userID])
  userID         Int
  productOrder   ProductOrder @relation(fields: [productOrderID], references: [productOrderID])
  productOrderID Int          @unique
}

model Product {
  productID       Int             @id @default(autoincrement())
  name            String          @db.VarChar(200)
  description     String          @db.VarChar(200)
  stock           Int
  price           Decimal         @db.Decimal(10, 0)
  image           String          @db.VarChar(200)
  productCategory ProductCategory @relation(fields: [CategoryID], references: [CategoryID])
  CategoryID      Int
  ProductOrder    ProductOrder[]
}

model ProductCategory {
  CategoryID Int       @id @default(autoincrement())
  name       String    @db.VarChar(200)
  href       String    @db.VarChar(200)
  image      String    @db.VarChar(200)
  products   Product[]
}

model ProductOrder {
  productOrderID Int            @id @default(autoincrement())
  product        Product        @relation(fields: [productID], references: [productID])
  productID      Int
  count          Int
  customerOrder  CustomerOrder?
}

model User {
  userID        Int             @id @default(autoincrement())
  customerOrder CustomerOrder[]

  name      String  @db.VarChar(200)
  firstname String  @db.VarChar(200)
  email     String  @unique @db.VarChar(200)
  phoneNr   String  @db.VarChar(10)
  adress    String  @db.VarChar(200)
  adressNr  String  @db.VarChar(6)
  city      String  @db.VarChar(200)
  plz       String  @db.VarChar(4)
  password  String  @db.VarChar(200)
  adminFlag Boolean
}
